<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>disable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>FAST FBasic Interpreter</Title>
    <Description>FBasicInterpreter represents the fundamental rules of the programming language FBASIC</Description>
    <Copyright>Global Cloud Services EOOD</Copyright>
    <PackageReadmeFile>README.MD</PackageReadmeFile>
    <PackageOutputPath>.\Packages</PackageOutputPath>
	  <PackageId>FAST.FBasicInterpreter</PackageId>
	  <Version>1.0.0</Version>
	  <Authors>GCS</Authors>
	  <RepositoryUrl>https://github.com/aafent/FAST.FBasic</RepositoryUrl>
  </PropertyGroup>

	
  <ItemGroup>
	  <None Include="Documents\README.MD" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Documents\README.MD">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>


 

</Project>
